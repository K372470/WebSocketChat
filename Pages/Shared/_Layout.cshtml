@{
    if (ViewBag.Header == null)
        ViewBag.Header = "Dont forget to set ViewBag.Header for your pages";
}
<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <meta charset="utf-8" />
    <link rel="icon" href="https://png.pngitem.com/pimgs/s/148-1489584_chat-png-icon-free-download-searchpng-blue-chat.png"/>
    <title>Chat Room</title>
    <style>
        body {
            display: flex;
            height: 100vh;
            flex-direction: column;
            justify-content: flex-start;
            align-items: stretch;
        }

        live-preview-root {
            display: none;
        }

        .header {
            background:white;
            position: sticky;
            top: 0;
            z-index:1;
        }

        main {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction:column;
            height: 100%;
        }

        .text-danger {
            font-size: 12px;
        }
    </style>
    @RenderSection("Styles", false)
</head>

<body>
    <nav class="navbar header border-bottom p-2">
        <span class="navbar-brand fs-2 m-2">
            @ViewBag.Header
         </span>
        <header>
            <ul class="nav nav-pills align-items-center">

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Page("Home")">Home</a>
                </li>
                @if (Context.User.Identity.IsAuthenticated)
                {
                            <li class="nav-item">
                                      <a href="@Url.Page("Logout")" class="nav-link">Logout</a>
                                </li>

                                    <li class="nav-item">
                                                <span class="nav-link text-success fs-4">@Context.User.Identity.Name</span>
                                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Page("Login")">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Page("Register")">Register</a>
                    </li>
                }
            </ul>
        </header>
    </nav>
    <main>
        @RenderBody()
    </main>
</body>

</html>